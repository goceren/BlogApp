@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
}

    <div class="container mt-3">
        <h2>Blog List</h2>
        <hr />
        <div class="row">
            <div class="col-sm">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Image</th>
                                <th scope="col">Title</th>
                                <th scope="col">Date</th>
                                <th scope="col">is Approved</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">@item.BlogId</td>
                                    <td><img src="~/img/@item.Image" width="50" height="50"/></td>
                                    <td>@item.Title</td>
                                    <td>@item.Date</td>
                                    <td>
                                        @if (@item.isApproved)
                                        {
                                            <i class="fa fa-check" aria-hidden="true"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-times" aria-hidden="true"></i>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Edit" asp-route-id="@item.BlogId">Edit</a>                                             <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        There is no Blog
                    </div>
                }
            </div>
        </div>
    </div>
